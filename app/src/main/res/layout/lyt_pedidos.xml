<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pedidos">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="330dp"
                    android:layout_height="114dp"
                    android:background="@drawable/titulo_pedidos"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="!Bienvenido al registro y listado de pedidosÂ¡"
                    android:textColor="#FF3300"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnRegistrarP"
                    android:layout_width="225dp"
                    android:layout_height="67dp"
                    android:background="@drawable/boton_redondeado_ped"
                    android:onClick="registrarP"
                    android:text="Registrar pedido"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnListarP"
                    android:layout_width="185dp"
                    android:layout_height="67dp"
                    android:background="@drawable/boton_redondeado_ped"
                    android:onClick="listarP"
                    android:text="LISTAR pedidos"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnListarP2"
                    android:layout_width="177dp"
                    android:layout_height="67dp"
                    android:background="@drawable/boton_redondeado_ped"
                    android:onClick="regresarInicio"
                    android:text="Ir al inicio"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>