<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="278dp"
            android:layout_height="138dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente" />

            <TextView
                android:id="@+id/txtRuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RUC" />

            <TextView
                android:id="@+id/txtProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto" />

            <TextView
                android:id="@+id/txtCant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad" />

            <TextView
                android:id="@+id/txtFecEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Entrega" />

            <TextView
                android:id="@+id/txtLugEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugar de Entrega" />

            <TextView
                android:id="@+id/txtHorEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de Entrega" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>